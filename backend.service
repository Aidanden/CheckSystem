[Unit]
Description=Node.js Backend
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/CeramiSys/server
ExecStart=/bin/bash -c "source /home/admin/.nvm/nvm.sh && nvm use 24 && npm run start"
Restart=always
Environment=NODE_ENV=production
Environment=PORT=4000

[Install]
WantedBy=multi-user.target
